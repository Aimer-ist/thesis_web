    @*換圖片*@
    <script>
        var picArr = new Array();
        for (i = 1; i < 10; i++) {
            picArr.push("/img/" +@x.no+"/" + i + ".png");
        }

        var index = 0;

        function next(){
            index++;
            if(index==picArr.length){
                index=0;
            }
            document.getElementById("pic").src=picArr[index];
        }

        function pre(){
            index--;
            if(index<0){
                index=picArr.length-1;
            }
            document.getElementById("pic").src=picArr[index];
        }

        // 把按鈕關掉，然後把按鈕和想關閉的秒數傳進去計時器
        function setButtonTime(Btn) {
            Btn.disabled = true;
            setstr(Btn, 30)
        }

        // 計時器
        function setstr(Btn, s) {
            Btn.value ='(' + s + ')'; // 按鈕上的字，用來顯示剩餘時間
            s -= 1; // 每次進來都減少一秒
            if (s >= 0) {
                setTimeout(setstr, 1000, Btn, s); // 如果還沒歸零，一秒後再呼叫自己 ps: 遞迴
            }
            // 如果歸零了，就打開按鈕
            else {
                Btn.disabled = false;
                Btn.value = '確定';
            }
        }

        // 網頁載入後自動執行
        window.onload = function () {
            btnOK = document.getElementById("btnOk");
            setButtonTime(btnOK);
        };
    </script>


